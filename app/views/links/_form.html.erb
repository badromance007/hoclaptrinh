<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :title, class: "form-control", type: "hidden" %>
  </div>
  <div class="form-group">
    <%= f.text_field :description, class: "form-control", type: "hidden" %>
  </div>
  <div class="form-group">
    <%= f.text_field :image_url, class: "form-control" , type: "hidden" %>
  </div>
  <div class="form-group">
    <%= f.text_field :site_name, class: "form-control", type: "hidden" %>
  </div>
  <div class="form-group">
    <%= f.label :url %><br>
    <%= f.text_field :url, class: "form-control", id: "post_content" %>
  </div>
  <br>
    <div class="preview-link">
      <img src="" id="preview-image">
      <div id="preview-title">
      </div>
      <p id="preview-description"></p>
      <p id="preview-url"></p>
    </div>
  <br>

  <div class="field">
    <%= f.label :tag_list, "Tags (separated by commas)" %><br />
    <%= f.text_field :tag_list %>
  </div>

  <br>
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
  </div>

<% end %>
